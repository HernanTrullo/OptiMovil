<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/background_fragment"
    tools:context=".fragments.BotonesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:baselineAligned="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:id="@+id/layout_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/ibtn_search"
                android:layout_width="@dimen/ic_menu"
                android:layout_height="@dimen/ic_menu"
                android:background="@drawable/ic_btn_search_24" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/ibtn_home"
                android:layout_width="@dimen/ic_menu"
                android:layout_height="@dimen/ic_menu"
                android:background="@drawable/ic_btn_home_24" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/ibtn_share"
                android:layout_width="@dimen/ic_menu"
                android:layout_height="@dimen/ic_menu"
                android:background="@drawable/ic_btn_share" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_filter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/ibtn_filter"
                android:layout_width="@dimen/ic_menu"
                android:layout_height="@dimen/ic_menu"
                android:background="@drawable/ic_btn_filtros_24"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_likes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/ibtn_likes"
                android:layout_width="@dimen/ic_menu"
                android:layout_height="@dimen/ic_menu"
                android:background="@drawable/ic_btn_like_24"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_settings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/ibtn_settings"
                android:layout_width="@dimen/ic_menu"
                android:layout_height="@dimen/ic_menu"
                android:background="@drawable/ic_btn_settings_24" />
        </LinearLayout>


    </LinearLayout>

</FrameLayout>